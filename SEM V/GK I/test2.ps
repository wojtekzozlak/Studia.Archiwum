%!
/tree {
	4 dict begin
		/a exch def
		/l exch def
		/y exch def
		/x exch def
		l 10 ge {
			l 15 ge { 0.5 0.3 0.0 }
				{ 0.0 0.9 0.0 } ifelse
				setrgbcolor
			l 0.05 mul setlinewidth
			newpath
			x y moveto
			a cos l mul a sin l mul rlineto
			currentpoint
			stroke
			l 0.9 mul 3 copy
			a 10 add tree
			a 10 sub tree
		} if
	end
} def
200 100 70 90 tree
showpage
